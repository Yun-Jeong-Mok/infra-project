---
// src/components/Layout.astro
---
<html lang="ko" class="bg-gray-100 dark:bg-gray-900">
  <head>
    <meta charset="UTF-8" />
    <title>Astro 페이지</title>
    <link href="/src/output.css" rel="stylesheet">
    <script is:inline>
      // 테마 토글 함수
      function toggleTheme() {
        const html = document.documentElement;
        const isDark = html.classList.toggle('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
      }
      // 저장된 테마 적용 (초기 렌더 직후)
      (function() {
        const theme = localStorage.getItem('theme');
        if (theme === 'dark') document.documentElement.classList.add('dark');
        else document.documentElement.classList.remove('dark');
      })();
    </script>
  </head>
  <body class="min-h-screen w-screen flex flex-row bg-gray-100 dark:bg-gray-900 transition-colors duration-300 overflow-x-hidden">
    <aside class="fixed left-0 top-0 h-full w-56 bg-white dark:bg-gray-800 shadow-lg flex flex-col items-center py-8 z-20">
      <h2 class="text-xl font-bold mb-8 text-indigo-600 dark:text-indigo-300">Astro Demo</h2>
      <nav class="flex flex-col space-y-4 w-full px-4">
        <a href="/" class="py-2 px-4 rounded-lg text-gray-700 dark:text-gray-200 hover:bg-gray-200 dark:hover:bg-gray-700 transition font-semibold">메인</a>
        <a href="/webcam" class="py-2 px-4 rounded-lg text-gray-700 dark:text-gray-200 hover:bg-gray-200 dark:hover:bg-gray-700 transition font-semibold">웹캠 얼굴 인증</a>
        <a href="/db" class="py-2 px-4 rounded-lg text-gray-700 dark:text-gray-200 hover:bg-gray-200 dark:hover:bg-gray-700 transition font-semibold">DB 조회</a>
      </nav>
    <div class="flex-1"></div>
    </aside>
    <main class="flex-1 flex flex-col items-center justify-center p-8 ml-56">
      <slot />
    </main>
  </body>
</html>
